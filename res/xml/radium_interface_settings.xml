<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/interface_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Gesture anywhere -->
    <PreferenceScreen
        android:key="gesture_anywhere"
        android:fragment="com.android.settings.radium.gestureanywhere.GestureAnywhereSettings"
        android:title="@string/gesture_anywhere_title"
	android:icon="@drawable/ic_settings_gestures"
	settings:advanced="true" />

    <!-- Circle app bar -->
    <PreferenceScreen
        android:key="app_circle_bar"
        android:fragment="com.android.settings.radium.AppCircleBar"
        android:title="@string/app_circle_bar_title"
        android:icon="@drawable/ic_settings_sidebar"
	settings:advanced="true" />

    <!-- App sidebar -->
    <PreferenceScreen
        android:key="app_sidebar"
        android:fragment="com.android.settings.radium.AppSidebar"
        android:title="@string/app_sidebar_title"/>

    <!-- Heads up notifications -->
    <Preference
         android:key="heads_up_enabled"
         android:fragment="com.android.settings.radium.HeadsUpSettings"
         android:title="@string/category_heads_up"
	 android:summary="@string/heads_up_summary" />

    <!-- Task manager -->
    <SwitchPreference
         android:key="enable_task_manager"
         android:title="@string/enable_task_manager_title"
         android:summary="@string/enable_task_manager_summary" />

</PreferenceScreen>
